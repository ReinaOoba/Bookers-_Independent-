<div class="container px-5 px-sm-0">
  <!--エラー画面-->
   <%= render "layouts/errors", obj: @book %>
  <div class='row'>
<!--左テンプレート-->
    <div class='col-md-3'>
      <%= render "users/user_info", user: current_user %>
    </div>
<!--サーバ内全投稿一覧-->
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user.id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td><%= render "favorites/favorites_btn", book: book %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
