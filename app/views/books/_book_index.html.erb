<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>User Name</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(60,60)), user_path(book.user.id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td><%= link_to book.user.name, user_path(book.user) %></td>
      <td id="favorite_btn_<%= book.id %>"><%= render "favorites/favorites_btn", book: book %></td>
    </tr>
    <% end %>
  </tbody>
</table>