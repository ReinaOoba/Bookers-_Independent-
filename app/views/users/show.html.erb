<div class="container px-5 px-sm-0">
  <div class='row'>
<!--左テンプレート-->
    <div class='col-md-3'>
      <%= render "user_info", user: @user %>
    </div>
<!--投稿一覧-->
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <th><%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user) %></th>
            <th><%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
